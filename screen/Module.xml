<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://moqui.org/xsd/xml-screen-3.xsd" default-menu-title="Template">
    <transition name="createTutorial">
        <service-call name="create#moqui.example.Tutorial"/>
        <default-response url="."/>
    </transition>
    <widgets>
        <container-dialog id="MewTutorial" button-text="Create Tutorial">
            <form-single name="CreateForm" transition="createTutorial">
                <auto-fields-entity entity-name="moqui.example.Tutorial" field-type="edit"/>
                <field name="create">
                    <default-field>
                        <submit/>
                    </default-field>
                </field>
            </form-single>
        </container-dialog>

        <form-list name="TdList" list="tdList" select-columns="true">
            <entity-find entity-name="moqui.example.TutorialDetail" list="tdList">
                <search-form-inputs/>
            </entity-find>
            <row-actions>
                <set field="typeStat" from="null"/>
                <log message="tutorialTypeEnumId: $tutorialTypeEnumId"/>
                <if condition="tutorialTypeEnumId == 'Tut_1'">
                    <set field="typeStat" value="First Tutorial"/>
                    <else-if condition="tutorialTypeEnumId == 'Tut_2'">
                        <set field="typeStat" value="Second Tutorial"/>
                    </else-if>
                    <else>
                        <set field="typeStat" value="Invalid Tutorial"/>
                    </else>
                </if>
            </row-actions>
            <auto-fields-entity entity-name="moqui.example.TutorialDetail" field-type="display"/>
            <field name="typeStat">
                <default-field>
                    <display/>
                </default-field>
            </field>
        </form-list>
    </widgets>
</screen>